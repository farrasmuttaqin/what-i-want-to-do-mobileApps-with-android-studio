<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SelectTask"
    tools:showIn="@layout/activitiy_finished_task">

    <TextView
        android:id="@+id/titleF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="Your Activity"
        android:textSize="20dp"
        android:textColor="#333333"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/textTitleF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Activity Description"
        android:layout_below="@+id/titleF"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/textDateF"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:textColor="#333333"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textTitleF"
        android:text="Due date"
        android:textSize="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp" />

    <View
        android:layout_marginTop="50dp"
        android:id="@+id/separator2F"
        android:layout_below="@id/textDateF"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/gradient"/>

    <ProgressBar
        android:id="@+id/loadingDelete"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:layout_below="@id/separator2F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/deleteS"
        android:background="@drawable/gradient"
        android:textColor="#cc0000"
        android:layout_width="80dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/loadingDelete"
        android:text="Delete"
        android:textSize="16dp" />



</RelativeLayout>